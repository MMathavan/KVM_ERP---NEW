@{
    ViewBag.Title = "Opening Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }

    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }

    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }

    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
        text-decoration: none;
    }

    .table-container {
        padding: 30px;
        background: white;
    }

    #openingStockTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    #openingStockTable thead th {
        background: #7f88e9;
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255, 255, 255, 0.35);
    }

    #openingStockTable thead th:last-child {
        border-right: none;
    }

    #openingStockTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }

    #openingStockTable tbody tr:hover {
        background-color: #f8f9ff;
        transition: all 0.2s ease;
    }

    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: #fff;
        transform: translateY(-1px);
    }

    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: #fff;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }

    .btn-print {
        background: linear-gradient(135deg, #74b9ff, #0984e3);
        color: #fff;
    }

    .btn-print:hover {
        background: linear-gradient(135deg, #0984e3, #2d3436);
        transform: translateY(-1px);
    }

    .date-filter-card {
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
        border: 1px solid #e3f2fd;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .form-label {
        font-size: 14px;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #4facfe;
        box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25);
    }

    #filterBtn {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    #filterBtn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
    }

    #clearBtn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        border: 2px solid #6c757d;
        transition: all 0.3s ease;
    }

    #clearBtn:hover {
        background-color: #6c757d;
        color: white;
        transform: translateY(-2px);
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="fa fa-play-circle"></i>
                    Opening Stock
                </h1>
                @if (User.IsInRole("OpeningStockCreate"))
                {
                    <a href="@Url.Action("Form", "OpeningStock")" class="btn add-btn">
                        <i class="fa fa-plus-circle"></i> Add New
                    </a>
                }
            </div>
        </div>

        <div class="table-container">
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card border-0 shadow-sm date-filter-card">
                        <div class="card-body">
                            <div class="row align-items-end">
                                <div class="col-md-3">
                                    <label for="fromDate" class="form-label fw-bold text-primary">
                                        <i class="fa fa-calendar-alt"></i> From Date
                                    </label>
                                    <input type="date" id="fromDate" class="form-control border-2" />
                                </div>
                                <div class="col-md-3">
                                    <label for="toDate" class="form-label fw-bold text-primary">
                                        <i class="fa fa-calendar-alt"></i> To Date
                                    </label>
                                    <input type="date" id="toDate" class="form-control border-2" />
                                </div>
                                <div class="col-md-3">
                                    <button type="button" id="filterBtn" class="btn btn-primary px-4">
                                        <i class="fa fa-filter"></i> Filter
                                    </button>
                                    <button type="button" id="clearBtn" class="btn btn-outline-secondary px-4 ms-2">
                                        <i class="fa fa-times"></i> Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table id="openingStockTable" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Date</th>
                        <th>Product Type</th>
                        <th>Product</th>
                        <th>Packing Master</th>
                        <th>No. of Slabs</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>S.No</th>
                        <th>Date</th>
                        <th>Product Type</th>
                        <th>Product</th>
                        <th>Packing Master</th>
                        <th>No. of Slabs</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'console';

            var table = $('#openingStockTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAjaxData", "OpeningStock")',
                    type: 'GET',
                    data: function (d) {
                        d.fromDate = $('#fromDate').val();
                        d.toDate = $('#toDate').val();
                    },
                    dataSrc: function (json) {
                        if (json && Array.isArray(json.data)) return json.data;
                        if (Array.isArray(json)) return json;
                        if (json && json.error) { console.error('Server error:', json.error); return []; }
                        return [];
                    },
                    error: function (xhr, status, err) {
                        console.error('OpeningStock GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load data.');
                    }
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return meta.row + 1;
                        },
                        orderable: false
                    },
                    {
                        data: 'TRANDATE',
                        render: function (data, type, row) {
                            if (data && type === 'display') {
                                var date = new Date(data);
                                if (!isNaN(date.getTime())) {
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0');
                                    var year = date.getFullYear();
                                    return day + '/' + month + '/' + year;
                                }
                            }
                            return data;
                        }
                    },
                    { data: 'ProductType' },
                    { data: 'Product' },
                    { data: 'PackingMaster' },
                    { data: 'NoOfSlabs' },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {
                            var id = row['TRANMID'];
                            var buttons = '';

                            buttons += '<a href="' + '@Url.Action("Form", "OpeningStock")' + '/' + id + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>&nbsp;';
                            buttons += '<a href="#" class="btn btn-action btn-delete editor_remove" data-id="' + id + '"><i class="fa fa-trash"></i> Delete</a>';

                            return buttons;
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[1, 'desc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            $('#filterBtn').on('click', function () {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();

                if (fromDate && toDate && fromDate > toDate) {
                    alert('From Date cannot be greater than To Date');
                    return;
                }

                var $btn = $(this);
                var originalHtml = $btn.html();
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Filtering...');
                $btn.prop('disabled', true);

                table.ajax.reload(function () {
                    $btn.html(originalHtml);
                    $btn.prop('disabled', false);
                });
            });

            $('#clearBtn').on('click', function () {
                var today = new Date().toISOString().split('T')[0];
                $('#fromDate').val(today);
                $('#toDate').val(today);

                var $btn = $(this);
                var originalHtml = $btn.html();
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Clearing...');
                $btn.prop('disabled', true);

                table.ajax.reload(function () {
                    $btn.html(originalHtml);
                    $btn.prop('disabled', false);
                });
            });

            $('#fromDate, #toDate').on('keypress', function (e) {
                if (e.which === 13) {
                    $('#filterBtn').click();
                }
            });

            var today = new Date().toISOString().split('T')[0];
            $('#fromDate').val(today);
            $('#toDate').val(today);

            table.ajax.reload();

            // Delete handler for Opening Stock
            $(document).on('click', 'a.editor_remove', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                if (!id) return false;
                if (confirm('Are you sure you want to delete this Opening Stock entry?')) {
                    $.post('@Url.Action("Del", "OpeningStock")', { id: id })
                        .done(function (response) {
                            if (typeof response === 'string' && response.indexOf('Successfully') !== -1) {
                                table.ajax.reload();
                                alert('Deleted successfully');
                            } else {
                                alert('Error: ' + (response && response.error ? response.error : response));
                            }
                        })
                        .fail(function () { alert('Error occurred while deleting the record.'); });
                }
                return false;
            });
        });
    </script>
}
